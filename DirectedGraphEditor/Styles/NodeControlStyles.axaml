<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DirectedGraphEditor.Controls">

  <!--
  <Design.PreviewWith>
    <Border Padding=20>
    </Border>
  </Design.PreviewWith>
  -->
  
  <!-- ===========================
       NodeControl styles
       =========================== -->

  <!-- Node body (stable on hover) -->
  <Style Selector="local|NodeControl Border.nodeBody">
    <Setter Property="Background"       Value="#2A2A2A"/>
    <!-- opaque -->
    <Setter Property="BorderBrush"      Value="#00e5ff"/>
    <Setter Property="BorderThickness"  Value="2"/>
    <Setter Property="CornerRadius"     Value="8"/>
    <Setter Property="Padding"          Value="8,6"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment"   Value="Center"/>
  </Style>

  <!-- hover only when *NOT* pressed -->
  <Style Selector="local|NodeControl Border.nodeBody:pointerover:not(:pressed)">
    <Setter Property="Background"  Value="#333333"/>  <!-- subtle -->
    <Setter Property="BorderBrush" Value="#19e5ff"/>
  </Style>

  <!-- Optional: selected state (toggle via Classes:selected) -->
  <Style Selector="local|NodeControl Border.nodeBody.selected">
    <Setter Property="Background"  Value="#FF3A3A3A"/>
    <Setter Property="BorderBrush" Value="#FFD700"/>
  </Style>

  <!-- Pin dots (both sides). If you want a class, set Classes="pin" and
       change the selector to 'Ellipse.pin'. -->
  <Style Selector="local|NodeControl Ellipse">
    <Setter Property="Width"  Value="10"/>
    <Setter Property="Height" Value="10"/>
    <Setter Property="Fill"   Value="LightGray"/>
    <Setter Property="Stroke" Value="Black"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <!-- Node title text -->
  <Style Selector="local|NodeControl TextBlock.nodeTitle">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment"   Value="Center"/>
    <Setter Property="Margin" Value="0"/>
  </Style>

</Styles>

